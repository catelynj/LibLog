<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LibLog_v1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LibLog_v1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="LibLog">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Title Bar-->
        <Grid x:Name="AppTitleBar" Height="48" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingCol" Width="0"/>
                <ColumnDefinition x:Name="IconCol" Width="Auto"/>
                <ColumnDefinition x:Name="TitleCol" Width="Auto"/>
                <ColumnDefinition x:Name="LeftDragCol" Width="*"/>
                <ColumnDefinition x:Name="RightDragCol" Width="*"/>
                <ColumnDefinition x:Name="RightPaddingCol" Width="0"/>
            </Grid.ColumnDefinitions>
            <FontIcon x:Name="TitleBarIcon" Glyph="&#xE8F1;" Grid.Column="1" Width="25" Height="20" Margin="10"/>
            <TextBlock x:Name="TitleBarTextBlock" Text="LibLog" Grid.Column="2" FontSize="16" CharacterSpacing="75" VerticalAlignment="Center"/>
        </Grid>

        <!--Main Content-->
        <Grid x:Name="MainContent" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="FilterCol" Width="Auto" />
                <ColumnDefinition x:Name="BookCol" Width="900"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section for filters and sorting -->
            <Grid x:Name="FilterSection" Grid.Column="0" Width="250" Height="500" Margin="15,20,15,0">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Filter/Sort" FontSize="18" CharacterSpacing="55" Margin="0,25,0,0"/>
                        <!-- Title Filter -->
                        <TextBox x:Name="FilterTitle" PlaceholderText="Search by title..." Margin="0,5,0,5" HorizontalAlignment="Stretch" TabIndex="1" TextChanged="OnFilterChanged"/>
                        <!-- Author Filter -->
                        <TextBox x:Name="FilterAuthor" PlaceholderText="Search by author..." Margin="0,5,0,5" HorizontalAlignment="Stretch" TextChanged="OnFilterChanged"/>
                        <!-- Reading Status -->
                        <Expander Header="Reading Status" IsExpanded="False" HorizontalAlignment="Stretch">
                            <StackPanel Spacing="5" Margin="0,5,0,5">
                                <RadioButton x:Name="rb_All" Content="All" IsChecked="True" />
                                <RadioButton x:Name="rb_Read" Content="Read" />
                                <RadioButton x:Name="rb_Unread" Content="Unread" />
                                <RadioButton x:Name="rb_InProg" Content="In Progress"/>
                            </StackPanel>
                        </Expander>
                        <!-- Tags Filter -->
                        <Expander Header="Tags" IsExpanded="False" HorizontalAlignment="Stretch">
                            <StackPanel Spacing="5" Margin="0,5,0,5">
                                <!-- Dynamically populate user-created tags here -->
                            </StackPanel>
                        </Expander>
                        <!-- Clear Filters Button -->
                        <Button x:Name="btnClearFilters" Content="Clear Filters" HorizontalAlignment="Stretch" Margin="0,10,0,10" Click="btnClearFilters_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!--  Middle & Right Sections in SplitView -->
            <SplitView x:Name="SplitViewMain" Grid.Column="1" PanePlacement="Right" PaneBackground="Transparent">
                <SplitView.Content>
                    <!-- Middle Section for bookshelf graphics -->
                    <Grid x:Name="Library">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="HeaderRow" Height="50"/>
                            <RowDefinition x:Name="LibraryRow" Height="450"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="LibraryTextCol" Width="Auto"/>
                            <ColumnDefinition x:Name="BookButtonCol" Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2">
                            <TextBlock x:Name="txtBookshelfTitle" Grid.Column="0" Grid.Row="0" FontSize="22" HorizontalAlignment="Stretch" Margin="5,10,5,5">Your Library</TextBlock>
                            <Button x:Name="btnAddBook" Grid.Column="1" Grid.Row="0" Margin="25,10,5,5" TabIndex="0">
                                <Button.Content>
                                    <FontIcon Glyph="&#xE82E;"/>
                                </Button.Content>
                                <Button.Flyout>
                                    <MenuFlyout Placement="LeftEdgeAlignedTop" >
                                        <MenuFlyoutSubItem Text="Scan">
                                            <MenuFlyoutSubItem.Icon>
                                                <FontIcon Glyph="&#xEE6F;"/>
                                            </MenuFlyoutSubItem.Icon>
                                            <MenuFlyoutItem x:Name="btnScanUSB"  Text="USB Device" Click="btnScanUSB_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xEC5A;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem x:Name="btnScanCamera" Text="Camera" Click="btnScanCamera_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE722;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyoutSubItem>

                                        <MenuFlyoutItem Text="Search">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE721;"/>
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                            <Button x:Name="btnRefreshLibrary" Click="btnRefreshLibrary_Click">
                                <Button.Content>
                                    <FontIcon Glyph="&#xE72C;"/>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                        <ListView x:Name="lvBookshelf"
                                  Grid.Row="1"
                                  IsItemClickEnabled="True"
                                  ItemClick="lvBookshelf_ItemClick"
                                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3" HorizontalAlignment="Left"/>
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:Book">
                                    <Grid Margin="8" Width="150">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="80"/>
                                        </Grid.RowDefinitions>
                                        <Image Source="{x:Bind CoverImage}" 
                                               Width="125" 
                                               Height="150" 
                                               Stretch="Uniform"
                                               HorizontalAlignment="Center"
                                               Grid.Row="0"/>
                                        <StackPanel Grid.Row="1" Margin="0,8,0,0" HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Bind Title}" TextWrapping="Wrap" TextAlignment="Center" FontSize="14"/>
                                            <TextBlock Text="{x:Bind Author}" TextWrapping="Wrap" TextAlignment="Center" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </SplitView.Content>

                <SplitView.Pane>
                    <!-- Right Section for editing & viewing book details like cover, tags, etc. -->
                    <Grid x:Name="BookDetails" Margin="0,10,0,20">
                        <ScrollViewer x:Name="svBookDetails">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition x:Name="BookImage" Height="150"/>
                                    <RowDefinition x:Name="BookDetail" Height="50"/>
                                    <RowDefinition x:Name="Tags" Height="Auto"/>
                                    <RowDefinition x:Name="Buttons" Height="100"/>
                                </Grid.RowDefinitions>
                                <Image x:Name="imgDetailsCover"
                                       Source="{Binding CoverImage}" 
                                       Width="125" 
                                       Height="150" 
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       Grid.Row="0"
                                       Margin="0,20,0,0"/>
                                <StackPanel Margin="0,8,0,0" HorizontalAlignment="Center" Grid.Row="1">
                                    <TextBlock x:Name="txtDetailsTitle" Text="{Binding Title}" TextWrapping="Wrap" TextAlignment="Center" FontSize="16"/>
                                    <TextBlock x:Name="txtDetailsAuthor" Text="{Binding Author}" TextWrapping="Wrap" TextAlignment="Center" FontSize="14"/>
                                </StackPanel>


                                <!-- Add/Remove/Edit Tags -->
                                <StackPanel Grid.Row="2" Margin="20">
                                    <Button x:Name="btnEditTags" Click="btnEditTags_Click"  Margin="20" HorizontalAlignment="Center">
                                        <Button.Content>
                                            <FontIcon Glyph="&#xE70F;"/>
                                        </Button.Content>
                                    </Button>
                                    <TextBlock Text="Tags:" FontSize="14" Margin="10,10,0,5"/>
                                    <ListBox x:Name="lbTags"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" HorizontalAlignment="Stretch" x:Name="spEditTags" Visibility="Collapsed">
                                    <TextBox x:Name="txtNewTag" PlaceholderText="Enter tag..." Margin="10,5,10,5" HorizontalAlignment="Stretch"/>
                                    <Button x:Name="btnAddTag" Click="btnAddTag_Click">
                                        <Button.Content>
                                            <FontIcon Glyph="&#xECC8;"/>
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="btnRemoveTag" Click="btnRemoveTag_Click">
                                        <Button.Content>
                                            <FontIcon Glyph="&#xECC9;"/>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                                
                                
                                <!-- Remove Book from Library -->
                                <Button x:Name="btnRemoveBook" Click="btnRemoveBook_Click" Grid.Row="3" HorizontalAlignment="Center">
                                    <Button.Content>
                                        <FontIcon Glyph="&#xE74D;"/>
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </SplitView.Pane>
            </SplitView>
        </Grid>
    </Grid>


</Window>
